{
  "name": "next-json-server",
  "version": "0.2.0",
  "description": "Next.js App Router based lightweight JSON Server implementation",
  "keywords": [
    "json-server",
    "nextjs",
    "api",
    "mock",
    "rest",
    "postgresql",
    "drizzle",
    "database"
  ],
  "packageManager": "bun@1.2.8",
  "author": "yuyakinjo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuyakinjo/next-json-server.git"
  },
  "bugs": {
    "url": "https://github.com/yuyakinjo/next-json-server/issues"
  },
  "homepage": "https://github.com/yuyakinjo/next-json-server#readme",
  "bin": {
    "next-json-server": "build-bin/cli.js"
  },
  "files": [
    "app",
    "public",
    "bin",
    "build-bin",
    "templates",
    "next.config.ts",
    "package.json",
    "tsconfig.cli.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:watch": "bun run watch:templates & bun run dev",
    "dev:db-watch": "concurrently \"bun run watch:db\" \"bun run dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "biome ci",
    "gen:json:route": "bunx next-json-server generate json",
    "gen:pg:route": "bunx next-json-server generate db/postgres",
    "gen:pg:schema": "bun scripts/generate-schema-from-json.ts",
    "watch:templates": "bun scripts/watch-templates.ts",
    "watch:db": "nodemon --watch app/db/pg/schema --watch app/db/pg/[...api] --watch db.json --ext ts,json --exec \"bun run db:migrate-seed\"",
    "test": "vitest run",
    "test:type-check": "tsc --noEmit",
    "test:pg": "bun test tests/postgres.test.ts",
    "test:restore": "bun test && git restore db.json",
    "build:cli": "tsc -p tsconfig.cli.json",
    "prepublishOnly": "bun run build:cli",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun app/db/pg/migrate.ts",
    "db:seed": "bun app/db/pg/seed.ts",
    "db:migrate-seed": "bun run db:migrate && bun run db:seed",
    "db:studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.41.0",
    "next": "^15.2.4",
    "pg": "^8.11.3",
    "postgres": "^3.4.5",
    "ramda": "^0.30.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/postcss": "^4.0.4",
    "@types/node": "^22",
    "@types/pg": "^8.11.0",
    "@types/ramda": "^0.30.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.6",
    "nodemon": "^3.1.9",
    "postcss": "^8",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
