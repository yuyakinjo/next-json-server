{
  "name": "next-json-server",
  "version": "0.1.3",
  "description": "Next.js App Router based lightweight JSON Server implementation",
  "keywords": ["json-server", "nextjs", "api", "mock", "rest"],
  "packageManager": "bun@1.2.5",
  "author": "yuyakinjo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuyakinjo/next-json-server.git"
  },
  "bugs": {
    "url": "https://github.com/yuyakinjo/next-json-server/issues"
  },
  "homepage": "https://github.com/yuyakinjo/next-json-server#readme",
  "bin": {
    "next-json-server": "build-bin/cli.js"
  },
  "files": [
    "app",
    "public",
    "bin",
    "build-bin",
    "templates",
    "next.config.ts",
    "package.json",
    "tsconfig.cli.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:watch": "bun run watch:templates & bun run dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome ci",
    "gen:json:route": "bunx next-json-server generate json",
    "watch:templates": "bun scripts/watch-templates.ts",
    "test": "vitest run",
    "test:restore": "bun test && git restore db.json",
    "build:cli": "tsc -p tsconfig.cli.json",
    "prepublishOnly": "bun run build:cli"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.41.0",
    "next": "^15.2.4",
    "pg": "^8.11.3",
    "postgres": "^3.4.5",
    "ramda": "^0.30.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/postcss": "^4.0.4",
    "@types/node": "^22",
    "@types/pg": "^8.11.0",
    "@types/ramda": "^0.30.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "postcss": "^8",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
